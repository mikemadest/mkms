

<section id="older-work" class="work-articles">
    <h2>{{ page.header.title }}</h2>


    <div class="smaller-article-row">
        {% for item in page.header.portfolio %}
            <article>
                <div class="illustration">

                    {% if item.link %}
                        {% if item.linkMode == 'iframe' %}
                            <a href="{{ item.link }}"  data-fancybox data-type="iframe"
                               target="_blank" class="" data-src="{{ item.link }}">
                                {{ page.media[item.imgsmall].html() }}
                            </a>
                        {% else %}
                            <a href="{{ page.media[item.img].url() }}" data-fancybox
                               target="_blank" class="">
                                {{ page.media[item.imgsmall].html() }}
                            </a>
                        {% endif %}
                    {% else %}
                        {{ page.media[item.imgsmall].html() }}
                    {% endif %}
                </div>
                <h3>{{ item.title }}</h3>
                <div class="content">
                    <p>{{ item.description }}</p>
                    <ul>
                        {% for task in item.tasks %}
                            <li>{{ task }}</li>
                        {% endfor %}
                    </ul>
                    {% if item.link %}
                        {% if item.linkMode == 'iframe' %}
                            <a href="{{ item.link }}" data-fancybox data-type="iframe"
                               target="_blank" class="see-more"
                               data-src="{{ item.link }}">
                                {{ item.linklabel }}
                            </a>
                        {% else %}
                            <a href="{{ page.media[item.img].url() }}" data-fancybox
                               target="_blank"
                               class="see-more">
                                {{ item.linklabel }}
                            </a>
                        {% endif %}

                    {% endif %}
                </div>
            </article>
        {% endfor %}
    </div>

</section>

